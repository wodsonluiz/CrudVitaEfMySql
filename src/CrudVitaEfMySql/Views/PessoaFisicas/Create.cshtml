@model CrudProjectVita.Models.PessoaFisica

@{
    ViewData["Title"] = "Create";
}

<h4>Incluir Pessoa Fisica</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <label style="color:red">*</label>
                <input asp-for="Cpf" class="form-control" type="text" name="cpf" onkeydown="javascript: fMasc( this, mCPF );" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label"></label>
                <label style="color:red">*</label>
                <input asp-for="DataNascimento" class="form-control" type="date" onblur="idade(this);" id="inputDataNascimento" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <label style="color:red">*</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SobreNome" class="control-label"></label>
                <label style="color:red">*</label>
                <input asp-for="SobreNome" class="form-control" />
                <span asp-validation-for="SobreNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CEP" class="control-label"></label>
                <label style="color:red">*</label>
                <input asp-for="CEP" class="form-control" id="inputCep" onkeypress="mascara(this, '#####-###')" maxlength="9" />
                <span asp-validation-for="CEP" class="text-danger"></span>
                <div style="margin-top: 1%;">
                    <a class="btn btn-warning" onclick="getCep(inputCep)">Busca CEP</a>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Logradouro" class="control-label"></label>
                <label style="color:red">*</label>
                <input asp-for="Logradouro" class="form-control" id="InputLogradouro" readonly />
                <span asp-validation-for="Logradouro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <label style="color:red">*</label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Complemento" class="control-label"></label>
                <input asp-for="Complemento" class="form-control" />
                <span asp-validation-for="Complemento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bairro" class="control-label"></label>
                <label style="color:red">*</label>
                <input asp-for="Bairro" class="form-control" id="InputBairro" readonly />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <label style="color:red">*</label>
                <input asp-for="Cidade" class="form-control" id="InputCidade" readonly />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uf" class="control-label"></label>
                <label style="color:red">*</label>
                <input asp-for="Uf" class="form-control" id="InputUf" readonly />
                <span asp-validation-for="Uf" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:2%;">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top:1%;">
    <a asp-action="Index" class="btn btn-warning">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
